<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bruno.myapplication" >
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            style="@style/generalnotitle"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".aboutus"
            android:label="@string/title_activity_aboutus" >
        </activity>
        <activity
            android:name=".update_image"
            style="@style/generalnotitle"
            android:label="@string/title_activity_update_image_2" >
        </activity>
        <activity
            android:name=".image_done"
            android:label="@string/title_activity_image_done" >
        </activity>
    </application>

</manifest>
